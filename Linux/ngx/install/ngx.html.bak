f.stopPropagation();
});
/* Then push them back by clicking outside the menu or on an inside link*/
jQuery(document).on('click',function(f) {
if (jQuery(f.target).is('.wiki-sticky-title') === false) {
jQuery('.wiki-sticky').animate({
left: -summaryWidth + 'px'
}, 200);
jQuery('body').animate({
left: "0px"
}, 200);
}
});
